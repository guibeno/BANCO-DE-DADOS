SELECT * FROM employees
LEFT JOIN departments ON employees.dptoid = departments.dptoid;

-- RETORNA TODOS OS REGISTROS DA PRIMEIRA TABELA(ESQUERDA) COM A COMBINAÇÃO NA SEGUNDA TABELA, CASO NÃO HAJA NADA NA SEGUNDA TABELA, RETORNA VAZIO (<NULL>)


SELECT * FROM employees
INNER JOIN departments ON employees.dptoid = departments.dptoid;

--RETORNA APENAS OS REGISTROS QUE POSSUEM CONGRUENCIA ENTRE A PRIMEIRA E A SEGUNDA TABELA (OS DADOS DEVEM EXISTER EM AMBAS TABELAS)


SELECT DISTINCT departments.dptoname
FROM departments
LEFT JOIN employees ON  employees.dptoid = departments.dptoid;

-- COMPARA A TABELA DEPARTMENT COM EMPLOYEES E PRINTA APENAS O DEPARTAMENTO QUE TEM FUNCIONARIOS
